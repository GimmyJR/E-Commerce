@model IEnumerable<E_Commerce.Models.Order>

@{
    ViewData["Title"] = "GetAll";
}

<h1>Orders</h1>

<div class="order-container">
    <h4>Your Orders</h4>
    <hr />
    <table class="order-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
                <th>@Html.DisplayNameFor(model => model.ShippingAddress)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => order.Id)</td>
                    <td>@Html.DisplayFor(modelItem => order.OrderDate)</td>
                    <td>@Html.DisplayFor(modelItem => order.TotalAmount)</td>
                    <td>@Html.DisplayFor(modelItem => order.ShippingAddress)</td>
                    <td>@Html.DisplayFor(modelItem => order.Status)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = order.Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = order.Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = order.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="back-to-list">
    <a asp-action="GetAll" asp-controller="Product" class="btn btn-secondary">Back to List</a>
</div>

<link href="/css/orderStyles.css" rel="stylesheet" />
