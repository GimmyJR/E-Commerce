@{
    ViewBag.Title = "Delete Product";
}

<h2 class="page-title">Delete Product</h2>

<form asp-controller="Product" asp-action="DeleteProduct" asp-route-productId="" method="post" onsubmit="return confirmDeletion(event);">
    <div class="form-group">
        <label for="productId">Enter Product ID:</label>
        <input type="number" class="form-control" id="productId" name="id" required />
    </div>
    <button type="submit" class="btn btn-danger">Delete Product</button>
</form>

<script>
    function confirmDeletion(event) {
        var result = confirm("Are you sure you want to delete this product?");
        if (!result) {
            event.preventDefault();
        }
        return result;
    }
</script>
