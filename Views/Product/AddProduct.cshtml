@model E_Commerce.Models.Product

@{
    ViewData["Title"] = "AddProduct";
    SelectList Cate = new SelectList(ViewBag.Cate,"Name","Name");
}

<h1 class="page-title">Add New Product</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="AddProduct">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StockQuantity" class="control-label"></label>
                <input asp-for="StockQuantity" type="number" class="form-control" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="Cate" class="form-control">
                    <option value="">Select Category</option>
                    
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" type="file" class="form-control-file" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create Product" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-link text-center mt-3">
    <a asp-controller="Product" asp-action="GetAll">Back to Product List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
<link href="/css/addProductStyles.css" rel="stylesheet" />
}
