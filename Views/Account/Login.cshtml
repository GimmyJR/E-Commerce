@model E_Commerce.Models.LoginUserVm

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<div class="container">
    <div class="title">Login</div>
    <div class="content">
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="user-details">
                <div class="input-box">
                    <span class="details">Username</span>
                    <input asp-for="UserName" class="form-control" placeholder="Enter your username" required>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <span class="details">Password</span>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
            </div>
            <div class="button">
                <input type="submit" value="Login">
            </div>
        </form>
        <div class="switch-form">
            <span>New here?</span>
            <a asp-controller="Account" asp-action="Register">Sign up</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link href="/css/SignUp.css" rel="stylesheet" />

